{
	"name": "soba",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/soba/src",
	"prefix": "platform",
	"tags": [],
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/angular:package",
			"outputs": ["{workspaceRoot}/dist/{projectRoot}"],
			"options": {
				"project": "libs/soba/ng-package.json"
			},
			"configurations": {
				"production": {
					"tsConfig": "libs/soba/tsconfig.lib.prod.json"
				},
				"development": {
					"tsConfig": "libs/soba/tsconfig.lib.json"
				}
			},
			"defaultConfiguration": "production"
		},
		"publish": {
			"command": "npm publish",
			"options": {
				"cwd": "dist/libs/soba"
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/soba/jest.config.ts"
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": [
					"libs/soba/**/*.ts",
					"libs/soba/**/*.html",
					"libs/soba/package.json",
					"libs/soba/abstractions/**/*.ts",
					"libs/soba/abstractions/**/*.html",
					"libs/soba/controls/**/*.ts",
					"libs/soba/controls/**/*.html",
					"libs/soba/misc/**/*.ts",
					"libs/soba/misc/**/*.html",
					"libs/soba/loaders/**/*.ts",
					"libs/soba/loaders/**/*.html",
					"libs/soba/cameras/**/*.ts",
					"libs/soba/cameras/**/*.html",
					"libs/soba/shaders/**/*.ts",
					"libs/soba/shaders/**/*.html",
					"libs/soba/staging/**/*.ts",
					"libs/soba/staging/**/*.html",
					"libs/soba/performances/**/*.ts",
					"libs/soba/performances/**/*.html",
					"libs/soba/materials/**/*.ts",
					"libs/soba/materials/**/*.html",
					"libs/soba/modifiers/**/*.ts",
					"libs/soba/modifiers/**/*.html",
					"libs/soba/utils/**/*.ts",
					"libs/soba/utils/**/*.html",
					"libs/soba/gizmos/**/*.ts",
					"libs/soba/gizmos/**/*.html"
				]
			}
		},
		"storybook": {
			"executor": "@storybook/angular:start-storybook",
			"options": {
				"port": 4400,
				"configDir": "libs/soba/.storybook",
				"browserTarget": "soba:build-storybook",
				"compodoc": false
			},
			"configurations": {
				"ci": {
					"quiet": true
				}
			}
		},
		"build-storybook": {
			"executor": "@storybook/angular:build-storybook",
			"outputs": ["{options.outputDir}"],
			"options": {
				"outputDir": "dist/storybook/soba",
				"configDir": "libs/soba/.storybook",
				"browserTarget": "soba:build-storybook",
				"compodoc": false
			},
			"configurations": {
				"ci": {
					"quiet": true
				}
			}
		},
		"test-storybook": {
			"executor": "nx:run-commands",
			"options": {
				"command": "test-storybook -c libs/soba/.storybook --url=http://localhost:4400"
			}
		},
		"static-storybook": {
			"executor": "@nx/web:file-server",
			"options": {
				"buildTarget": "soba:build-storybook",
				"staticFilePath": "dist/storybook/soba"
			},
			"configurations": {
				"ci": {
					"buildTarget": "soba:build-storybook:ci"
				}
			}
		}
	}
}
