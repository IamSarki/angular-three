{
	"name": "core",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/core/src",
	"prefix": "platform",
	"tags": [],
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/angular:package",
			"outputs": ["{workspaceRoot}/dist/{projectRoot}"],
			"options": {
				"project": "libs/core/ng-package.json",
				"updateBuildableProjectDepsInPackageJson": true
			},
			"configurations": {
				"production": {
					"tsConfig": "libs/core/tsconfig.lib.prod.json"
				},
				"development": {
					"tsConfig": "libs/core/tsconfig.lib.json"
				}
			},
			"defaultConfiguration": "production"
		},
		"package": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"pnpm exec nx build core",
					"pnpm exec nx build-ecosystem core",
					"pnpm exec nx build plugin",
					"pnpm exec nx generate-json core"
				],
				"parallel": false
			}
		},
		"build-ecosystem": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"pnpm exec nx build soba",
					"pnpm exec nx build cannon",
					"pnpm exec nx build postprocessing"
				],
				"parallel": true
			}
		},
		"generate-json": {
			"executor": "nx:run-commands",
			"options": {
				"commands": ["node ./tools/scripts/generate-json.mjs", "node ./tools/scripts/generate-soba-json.mjs"],
				"parallel": true
			}
		},
		"publish": {
			"command": "npm publish",
			"cwd": "dist/libs/core"
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/core/jest.config.ts",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["libs/core/**/*.ts", "libs/core/**/*.html", "libs/core/package.json"]
			}
		}
	}
}
